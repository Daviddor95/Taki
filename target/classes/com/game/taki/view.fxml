<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="startScreen" prefHeight="540.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.game.taki.StartScreenController">
   <Button fx:id="createAccountButton" layoutX="339.0" layoutY="265.0" mnemonicParsing="false" text="Create account" />
   <Button fx:id="logInButton" layoutX="286.0" layoutY="265.0" mnemonicParsing="false" text="Log in" />
   <Button fx:id="guestButton" layoutX="299.0" layoutY="303.0" mnemonicParsing="false" text="Continue as a guest" />
