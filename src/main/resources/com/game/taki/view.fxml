<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>


<AnchorPane fx:id="startScreen" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.game.taki.StartScreenController">
   <Button fx:id="createAccountButton" layoutX="246.0" layoutY="265.0" mnemonicParsing="false"
           onAction="#onCreateAccountButtonClick" text="Create account"/>
   <Button fx:id="logInButton" layoutX="193.0" layoutY="265.0" mnemonicParsing="false" onAction="#onLogInButtonClick"
           text="Log in"/>
   <Button fx:id="guestButton" layoutX="206.0" layoutY="303.0" mnemonicParsing="false" onAction="#onGuestButtonClick"
           text="Continue as a guest"/>
   <TextField fx:id="userNameInput" layoutX="192.0" layoutY="163.0"/>
   <TextField fx:id="passwordInput" layoutX="192.0" layoutY="202.0"/>
   <Label fx:id="userNameLabel" layoutX="120.0" layoutY="167.0" text="User name:"/>
   <Label fx:id="passwordLabel" layoutX="123.0" layoutY="206.0" text="Password:"/>
   <ImageView fx:id="logo" fitHeight="150.0" fitWidth="200.0" layoutX="167.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@Taki_Cards_Game_Logo.png"/>
   </ImageView>
   <Label fx:id="welcomeMessage" layoutY="102.0" prefHeight="44.0" prefWidth="534.0"
          text="Welcome to the Taki game! Please log in to your account (or create one if you didn't registered yet) in order to save your progress, or play as a guest"
          textAlignment="CENTER" wrapText="true"/>
   <Label fx:id="errorMessage" layoutX="252.0" layoutY="236.0"/>
</AnchorPane>
